{
  "name": "lorawan-transport",
  "version": "0.1.0",
  "description": "LoraWan server-mqtt bridge",
  "main": "src/index.js",
  "scripts": {
    "lint": "npx eslint --ext js .",
    "start": "babel-node ./src/index.js",
    "dev": "cp deploy/.env_dev .env && NODE_ENV=development nodemon --exec babel-node ./src/index.js",
    "devLocal": "cp deploy/.env_local .env && NODE_ENV=local nodemon --exec babel-node ./src/index.js",
    "startStage": "pm2 startOrRestart ecosystem.config.js --env staging --update-env",
    "startProd": "pm2 startOrRestart ecosystem.config.js --env production --update-env"
  },
  "author": "getlarge",
  "license": "ISC",
  "keywords": [
    "IoT",
    "MQTT",
    "Interoperability"
  ],
  "dependencies": {
    "async-mqtt": "^2.0.0",
    "buffer-reverse": "^1.0.1",
    "colors": "^1.3.3",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^6.2.0",
    "lorawan-js": "^0.1.1",
    "mqtt-pattern": "^1.2.0",
    "node-aes-cmac": "^0.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-eslint": "^8.2.6",
    "babel-preset-minify": "^0.5.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^11.3.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "identity-obj-proxy": "^3.0.0",
    "nodemon": "^1.18.8",
    "prettier": "1.16.1",
    "tape": "^4.9.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-syntax-import-meta",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-json-strings",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-proposal-function-sent",
      "@babel/plugin-proposal-export-namespace-from",
      "@babel/plugin-proposal-numeric-separator",
      "@babel/plugin-proposal-throw-expressions"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "babel"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "parser": "babel-eslint"
    },
    "rules": {
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "import/prefer-default-export": "off",
      "no-param-reassign": "off",
      "one-var-declaration-per-line": "off"
    },
    "globals": {
      "require": true
    }
  },
  "eslintIgnore": [
    "/dist/",
    "/node_modules/",
    "aloes-handlers.min.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://framagit.org/aloes/lorawan-transport"
  }
}
