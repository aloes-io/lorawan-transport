{
  "name": "lorawan-transport",
  "version": "0.2.0",
  "description": "LoraWan Server - MQTT Bridge",
  "main": "src/index.js",
  "scripts": {
    "lint": "npx eslint --ext js .",
    "docs:server": "jsdoc2md ./src/services/lorawan-server.js > ./docs/server/README.md",
    "docs:controller": "jsdoc2md ./src/services/lorawan-controller.js > ./docs/controller/README.md",
    "docs:handler": "jsdoc2md ./src/services/lorawan-handler.js > ./docs/handler/README.md",
    "docs:bridge": "jsdoc2md ./src/services/mqtt-bridge.js > ./docs/bridge/README.md",
    "docs:config": "jsdoc2md ./src/config.js > ./docs/config/README.md",
    "docs:app": "jsdoc2md ./src/index.js > ./docs/app/README.md",
    "docs:md": "npm run docs:app ; npm run docs:config ; npm run docs:server ; npm run docs:controller ;  npm run docs:handler ; npm run docs:bridge",
    "docs:dev": "npm run docs:md ; cp ./README.md ./docs/readme/. ; vuepress dev docs",
    "docs:build": "npm run docs:md ; cp ./README.md ./docs/readme/. ; vuepress build docs",
    "docs:serve": "light-server -s public -p 7000 --servePrefix /lorawan-transport/",
    "start": "babel-node ./src/index.js",
    "start:dev": "cp deploy/.env_dev .env && NODE_ENV=development nodemon --exec babel-node ./src/index.js",
    "start:local": "cp deploy/.env_local .env && NODE_ENV=local nodemon --exec babel-node ./src/index.js",
    "start:stage": "cp deploy/.env_staging .env && NODE_ENV=staging nodemon --exec babel-node ./src/index.js",
    "deploy:stage": "pm2 startOrRestart ecosystem.config.js --env staging --update-env",
    "deploy:prod": "pm2 startOrRestart ecosystem.config.js --env production --update-env"
  },
  "author": "getlarge",
  "license": "ISC",
  "keywords": [
    "LoRaWAN",
    "IoT",
    "MQTT"
  ],
  "dependencies": {
    "aloes-handlers": "^1.1.5",
    "async-mqtt": "^2.0.0",
    "buffer-reverse": "^1.0.1",
    "colors": "^1.3.3",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^6.2.0",
    "lodash": "^4.17.11",
    "lora-packet": "^0.7.7",
    "mqtt-pattern": "^1.2.0",
    "node-aes-cmac": "^0.1.1",
    "oma-json": "^1.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "acorn": "^6.1.0",
    "babel-eslint": "^8.2.6",
    "babel-preset-minify": "^0.5.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^11.3.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "identity-obj-proxy": "^3.0.0",
    "jsdoc-to-markdown": "^4.0.1",
    "light-server": "^2.6.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.8",
    "prettier": "1.16.1",
    "vuepress": "^0.14.9"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-syntax-import-meta",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-json-strings",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-proposal-function-sent",
      "@babel/plugin-proposal-export-namespace-from",
      "@babel/plugin-proposal-numeric-separator",
      "@babel/plugin-proposal-throw-expressions"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "babel"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "parser": "babel-eslint"
    },
    "rules": {
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "import/prefer-default-export": "off",
      "no-param-reassign": "off",
      "one-var-declaration-per-line": "off"
    },
    "globals": {
      "require": true
    }
  },
  "eslintIgnore": [
    "/dist/",
    "/node_modules/"
  ],
  "repository": {
    "type": "git",
    "url": "https://framagit.org/aloes/lorawan-transport"
  }
}
